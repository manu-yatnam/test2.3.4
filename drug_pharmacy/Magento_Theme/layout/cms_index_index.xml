<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<referenceContainer name="page.top.custom">
			<container label="Top Slideshow Container" name="page.top.slideshow" as="topslideshow" htmlTag="div" htmlClass="slideshow-wrapper" after="-" />
		</referenceContainer>
		<referenceBlock name="page.top.custom">
    		<action method="setTemplate">
        		<argument name="template" xsi:type="string">Magento_Theme::html/homepage_top.phtml</argument>
    		</action>
		</referenceBlock>
		<referenceContainer name="page.wrapper">        		
        	<block class="Magento\Framework\View\Element\Template" name="block_slider" template="Magento_Theme::html/home_slider.phtml" after="header.container">
        		<container label="Top Slideshow Container" name="page.top.slideshow" as="topslideshow" htmlTag="div" htmlClass="slideshow-wrapper" after="-" />
        	</block>
        </referenceContainer>
      </body>
</page>
